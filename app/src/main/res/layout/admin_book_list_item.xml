<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EEEEEE">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="25dp"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/imageView"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="231dp"
                android:background="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/title"
                android:tooltipText="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="Title"
                android:textSize="25sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/author"
                android:tooltipText="Author"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:layout_toRightOf="@id/imageView"
                android:text="Author"/>

            <TextView
                android:id="@+id/publisher"
                android:tooltipText="Publisher"
                android:text="Publisher"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/author"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/language"
                android:tooltipText="Language"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/edition"
                android:tooltipText="Edition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edition"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/language"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/rating"
                android:tooltipText="Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/edition"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/yearOfPublish"
                android:tooltipText="Year Of Publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOP"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/rating"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/modifyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-56dp"
                android:layout_marginEnd="10dp"
                android:text="Modify" />

            <ImageView
                android:id="@+id/deleteIV"
                android:tooltipText="Delete this Movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>