<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UserBookBuy">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imgImageBB"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:scaleType="fitXY"
            android:layout_marginTop="6dp"
            android:background="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            >
        </ImageView>


        <TextView
            android:id="@+id/txtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_below="@id/imgImageBB"
            android:layout_marginVertical="12dp"/>
        <TextView
            android:id="@+id/edtTitleBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/imgImageBB"
            android:layout_marginLeft="150dp"
            />
        <TextView
            android:id="@+id/txtView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:layout_below="@id/txtView2"
            android:layout_marginVertical="12dp"
            />
        <TextView
            android:id="@+id/edtAuthorBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/edtTitleBB"
            android:layout_marginLeft="150dp"/>
        <TextView
            android:id="@+id/txtView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publisher"
            android:layout_below="@id/txtView3"
            android:layout_marginVertical="12dp"
            />
        <TextView
            android:id="@+id/edtPublisherBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Publisher"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/edtAuthorBB"
            android:layout_marginLeft="150dp"/>
        <TextView
            android:id="@+id/txtView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:layout_below="@id/txtView4"
            android:layout_marginVertical="12dp"/>
        <TextView
            android:id="@+id/edtLanguageBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Language"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/edtPublisherBB"
            android:layout_marginLeft="150dp"/>
        />
        <TextView
            android:id="@+id/txtView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edition"
            android:layout_below="@id/txtView5"
            android:layout_marginVertical="12dp"
            />
        <TextView
            android:id="@+id/edtEditionBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edition"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/edtLanguageBB"
            android:layout_marginLeft="150dp"/>
        <TextView
            android:id="@+id/txtView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_below="@id/txtView6"
            android:layout_marginVertical="12dp"
            />
        <TextView
            android:id="@+id/edtRatingBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rating"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/edtEditionBB"
            android:layout_marginLeft="150dp"/>
        <TextView
            android:id="@+id/txtView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year of Publication"
            android:layout_below="@id/txtView7"
            android:layout_marginVertical="12dp"
            />
        <TextView
            android:id="@+id/edtYOPbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year of Publication"
            android:layout_below="@id/edtRatingBB"
            android:layout_marginLeft="150dp"
            android:layout_marginVertical="12dp"/>
        <TextView
            android:id="@+id/txtView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/txtView8"
            android:layout_marginVertical="12dp"
            />
        <TextView
            android:id="@+id/edtDescriptionBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_below="@id/edtYOPbb"
            android:layout_marginLeft="150dp"
            android:layout_marginVertical="12dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnClick"
            android:text="Purchase"
            android:layout_below="@id/edtDescriptionBB"/>

    </RelativeLayout>

</ScrollView>

